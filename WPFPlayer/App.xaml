<Application x:Class="WPFPlayer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:WPFPlayer.Controls"
             xmlns:local="clr-namespace:WPFPlayer"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Exit="Application_Exit"
             Startup="Application_Startup"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->

            <Style BasedOn="{StaticResource DefaultMenuItemStyle}" TargetType="controls:DataSelectMenuItem" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
